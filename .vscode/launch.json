    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Nest Framework",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:dev"
            ],
            "env": {
                "DOTENV_KEY": "fix this value"
            },
            "console": "integratedTerminal",
            "restart": true,
            "autoAttachChildProcesses": true,
            "sourceMaps": true,
            "cwd": "${workspaceRoot}/backend",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug React App",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ],
            "console": "integratedTerminal",
            "restart": true,
            "autoAttachChildProcesses": true,
            "sourceMaps": true,
            "cwd": "${workspaceRoot}/frontend",
        }
    ]
}

